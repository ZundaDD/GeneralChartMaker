<Window x:Class="ChartMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChartMaker"
        xmlns:pu="https://opensource.panuon.com/wpf-ui"
        mc:Ignorable="d"
        Title="传统下落式音游通用制谱器" Height="675" Width="900" MinHeight="450" MinWidth="600"
        WindowStartupLocation="CenterScreen">


    <Grid>
        <DockPanel>
            
            <Menu DockPanel.Dock="Top" Height="25" Background="LightGray">
                <MenuItem Header="_文件" Height="25" Width="Auto" >
                    <MenuItem Header="_新建" Click="New_Click" Background="AliceBlue"/>
                    <MenuItem Header="_打开" Click="Open_Click" Background="AliceBlue"/>
                    <MenuItem Header="_保存" Click="Save_Click" Background="AliceBlue"/>
                    <Separator />
                    <MenuItem Header="_退出" Click="Exit_Click" Background="AliceBlue"/>
                </MenuItem>

                <MenuItem Header="_导出">
                    
                </MenuItem>

                <MenuItem Header="_编辑">
                    <MenuItem Header="_Undo" Click="Undo_Click" Background="AliceBlue"/>
                    <MenuItem Header="_Redo" Click="Redo_Click" Background="AliceBlue"/>
                </MenuItem>

                <MenuItem Header="_设置">
                    <MenuItem Header="_yige" Background="AliceBlue"/>
                </MenuItem>

                <MenuItem Header="_帮助" >
                    <MenuItem Header="_About" Click="About_Click" Background="AliceBlue"/>
                </MenuItem>
            </Menu>
            <TextBox DockPanel.Dock="Right" Margin="100,0,20,0" MinWidth="400" Height="450"/>
        </DockPanel>

    </Grid>
    

</Window>
